<project name="9rules">
  <skin>
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.1.1</version>
  </skin>

  <bannerLeft>
    <name>9rules</name>
    <src>/images/9rules_logo.png</src>
    <href>index.html</href>
  </bannerLeft>  

  <custom>
    <reflowSkin>
      <theme>bootswatch-spruce</theme>
      <highlightJs>true</highlightJs>
      <brand>
        <name>9rules</name>
        <href>http://tamada.github.com/9rules/</href>
      </brand>
      <slogan>Check your Java codes for small object programming.</slogan>
      <titleTemplate>%2$s | %1$s</titleTemplate>
      <toc>top</toc>
      <topNav>Download</topNav>
      <bottomNav>
        <column>Main|Download</column>
        <column>reports</column>
        <column>Attribution</column>
      </bottomNav>
      <bottomDescription>
        9rules is a checker for small object programming.
        It allows Java source codes as input, and analyze them.
      </bottomDescription>
      <pages>
        <index>
          <shortTitle>Welcome</shortTitle>
          <breadcrumbs>false</breadcrumbs>
          <toc>false</toc>
          <sections>
            <carousel />
            <thumbs>3</thumbs>
            <body />
            <columns>3</columns>
          </sections>
        </index>
        <developer-info>
          <toc>sidebar</toc>
        </developer-info>
      </pages>
    </reflowSkin>
  </custom>

  <body>
    <links>
      <item name="GitHub project" href="http://github.com/tamada/9rules/" />
      <item name="How to use" href="usage.html" />
    </links>

    <menu name="Main" inherit="top">
      <item name="Home" href="index.html" />
      <item name="Release notes" href="release-notes.html" />
    </menu>
    <menu name="Download" inherit="top">
      <item name="Download" href="download.html" />
      <item name="Clone from GitHub" href="download.html#Clone_from_GitHub" />
      <item name="Authors"  href="download.html#Authors" />
      <item name="License"  href="download.html#License" />
    </menu>
    <menu name="Attribution" inherit="bottom">
      <item name="Attribution" href="attributions.html" />
      <item name="Issues" href="http://github.com/tamada/9rules/issues/" />
      <!--
          <item name="Donate" href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;amp;hosted_button_id=QWKNRFZH52828" />
